<article>
  <header>
    <h2><strong><%= @movie.title %></strong></h2>
  </header>
  <%= image_for @movie %>
  <p><%= @movie.description%></p>
  <table>
    <tr>
      <th>Rating: </th>
      <td><%= @movie.rating %></td>
    </tr>
    <tr>
      <th>Released: </th>
      <td><%= @movie.released_on %> (<%= time_ago_in_words @movie.released_on %>) </td>
    </tr>
    <tr>
      <th>Director: </th>
      <td><%= @movie.director %></td>
    </tr>
    <tr>
      <th>Cast: </th>
      <td><%= @movie.cast %></td>
    </tr>
    <tr>
      <th>Duration: </th>
      <td><%= @movie.duration %></td>
    </tr>
    <tr>
      <th>Total Gross: </th>
      <td><%= format_total_gross @movie %></td>
    </tr>
  </table>
</article>
<%= link_to "All Movies", movies_path %>
<%= link_to "Edit", edit_movie_path %>
<%= link_to "Delete", movie_path(@movie), method: :delete, data: {confirm: "Are you sure?"} %>
